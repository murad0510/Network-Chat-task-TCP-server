<Window x:Class="Network_Chat_task_TCP_server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Network_Chat_task_TCP_server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Command="{Binding ConnectServerCommand}" Width="150" Height="70" Content="Connect Server" FontSize="20" Background="DeepSkyBlue" Foreground="White" Margin="386,13,64,351">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>

        <ListBox Width="300" Height="100" ItemsSource="{Binding Users}"></ListBox>
        
    </Grid>
</Window>
